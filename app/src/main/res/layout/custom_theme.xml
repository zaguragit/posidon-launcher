<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/settings">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="64dp"
        android:requiresFadingEdge="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:gravity="center"
                android:text="@string/settings_title_theme"
                android:textColor="#ffffff"
                android:textSize="32sp"/>
            <LinearLayout
                style="@style/settingscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/settingsEntry"
                    android:id="@+id/fontbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/font_label"
                        style="@style/settingsbtn"
                        android:layout_width="0dp"
                        android:drawableStart="@drawable/ic_label"
                        android:layout_weight="1"
                        android:text="@string/font"/>
                    <TextView
                        android:id="@+id/fontname"
                        style="@style/settingsTextPreview"
                        android:layout_width="wrap_content"
                        android:text="@string/sans_serif"/>
                </LinearLayout>
                <posidon.launcher.view.setting.ColorSettingView
                    style="@style/settingsEntry"
                    android:id="@+id/accentColorSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawable="@drawable/ic_color"
                    app:label="@string/accent_color"
                    app:key="accent"
                    app:def="#1155ff"
                    app:hasAlpha="false"/>
            </LinearLayout>

            <LinearLayout
                style="@style/settingscard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <posidon.launcher.view.setting.HeaderSettingView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-12dp"
                    android:layout_marginBottom="12dp"
                    app:label="@string/settings_title_icons"/>
                <LinearLayout
                    style="@style/settingsEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:onClick="iconPackSelector">
                    <TextView
                        android:id="@+id/iconpack_title"
                        style="@style/settingsbtn"
                        android:layout_width="wrap_content"
                        android:text="@string/icon_pack" />
                    <TextView
                        android:id="@+id/iconpack_selector"
                        style="@style/settingsTextPreview"
                        android:layout_width="0dp"
                        android:gravity="end|center_vertical"
                        android:layout_weight="1"/>
                </LinearLayout>
                <posidon.launcher.view.setting.SwitchSettingView
                    style="@style/settingsEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawable="@drawable/ic_play"
                    app:label="@string/animated"
                    app:key="animatedicons"
                    app:def="true"/>
                <posidon.launcher.view.setting.SwitchSettingView
                    style="@style/settingsEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawable="@drawable/ic_shapes"
                    app:label="@string/generate_adaptive_icons"
                    app:key="reshapeicons"
                    app:def="false"/>
                <LinearLayout
                    style="@style/settingsEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/background_type_label"
                        style="@style/settingsbtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_color_dropper"
                        android:text="@string/background_type"/>
                    <posidon.launcher.view.Spinner
                        style="@style/settingsTextPreview"
                        android:id="@+id/iconBackgrounds"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <posidon.launcher.view.setting.ColorSettingView
                    style="@style/settingsEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawable="@drawable/ic_color"
                    app:label="@string/background"
                    app:key="icon:background"
                    app:def="#ff252627"/>
                <posidon.launcher.view.setting.SwitchSettingView
                    style="@style/settingsEntry"
                    android:id="@+id/recolorWhiteBGSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:drawable="@drawable/ic_color_dropper"
                    app:label="@string/recolor_white_bgs"
                    app:key="icon:tint_white_bg"
                    app:def="true"/>
                <LinearLayout
                    style="@style/settingsEntry"
                    android:id="@+id/icshapesettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/icShapeTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/accent"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:text="@string/icon_shape" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">
                        <LinearLayout
                            android:id="@+id/icshapedef"
                            android:onClick="icshapedef"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">
                            <TextView
                                style="@style/settingsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/default_icon_theme"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/icshaperound"
                            android:onClick="icshaperound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="8dp">
                            <TextView
                                style="@style/settingsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/circle"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/icshaperoundrect"
                            android:onClick="icshaperoundrect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="8dp">
                            <TextView
                                style="@style/settingsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/rounded_square"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/icshaperect"
                            android:onClick="icshaperect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="8dp">
                            <TextView
                                style="@style/settingsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/square"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/icshapesquircle"
                            android:onClick="icshapesquircle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="8dp">
                            <TextView
                                style="@style/settingsbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/squircle"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>