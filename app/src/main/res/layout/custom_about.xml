<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/settings">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="32dp"
        android:requiresFadingEdge="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|center_horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/maincard"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:cardBackgroundColor="@color/accent"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="25dp">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:layout_marginTop="-40dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/appname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#ddeeff"
                    android:text="@string/app_name"
                    android:layout_marginBottom="42dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textColor="#ddeeff"
                    android:text="@string/slogan"
                    android:layout_marginBottom="18dp"/>
            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_bg_round"
                        android:backgroundTint="#279fd1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="24dp"
                        android:onClick="openTelegram">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="48dp"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/telegram"
                            android:tint="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/telegram"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_bg_round"
                        android:backgroundTint="#333333"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="24dp"
                        android:onClick="openGitHub">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="48dp"
                            android:layout_gravity="end|bottom"
                            android:padding="5dp"
                            android:layout_marginStart="-4dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/github"
                            android:tint="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/github"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_bg_round"
                        android:backgroundTint="#1da1f2"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="24dp"
                        android:onClick="openTwitter">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="48dp"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/twitter"
                            android:tint="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/twitter"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_bg_round"
                        android:backgroundTint="#17C25B"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="24dp"
                        android:onClick="openWebsite">
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="48dp"
                            android:padding="2dp"
                            android:layout_gravity="end|bottom"
                            android:src="@drawable/ic_search"
                            android:tint="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/website"
                            android:textColor="#ffffff"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="48dp"
                    app:cardPreventCornerOverlap="true"
                    android:elevation="0dp">
                    <ImageView
                        android:id="@+id/leoProfile"
                        android:layout_width="96dp"
                        android:layout_height="96dp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/developer"
                        android:gravity="bottom"
                        android:textSize="18sp"
                        android:textColor="@color/cardtitle"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:text="@string/leoxshn_description"
                        android:textColor="@color/cardtxt"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sajid_shaik"
                        android:gravity="bottom"
                        android:textSize="18sp"
                        android:textColor="@color/cardtitle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:text="@string/sajid_shaik_description"
                        android:textColor="@color/cardtxt"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    app:cardCornerRadius="48dp"
                    app:cardPreventCornerOverlap="true"
                    android:elevation="0dp">
                    <ImageView
                        android:id="@+id/sajidShaikProfile"
                        android:layout_width="96dp"
                        android:layout_height="96dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="16dp"
                android:text="@string/github_contributors"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contributorList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>